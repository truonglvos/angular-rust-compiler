{
  "name": "@angular/rust-compiler",
  "version": "0.1.0",
  "description": "High-performance Angular compiler written in Rust",
  "main": "index.js",
  "types": "index.d.ts",
  "napi": {
    "name": "angular-rust-compiler",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu",
        "aarch64-unknown-linux-musl",
        "aarch64-apple-darwin",
        "x86_64-apple-darwin"
      ]
    }
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "build:demo:ngtsc": "cd demo-app && npx ngc -p tsconfig.app.json && cd .. && npm run format",
    "build:demo:rust": "cargo run -p angular-compiler-cli --bin ngc -- -p demo-app/tsconfig.rust.json && npm run format",
    "demo:binding": "rm -rf .angular && node scripts/test-binding.js",
    "demo:binding:batch": "rm -rf .angular && node scripts/test-binding-batch.js",
    "demo:ngtsc": "cd demo-app && npx ngc -p tsconfig.app.json",
    "benchmark:ngtsc": "node scripts/benchmark-ngtsc.js",
    "build:binding": "cd packages/binding && npm run build",
    "build:binding:release": "cd packages/binding && npm run build:release",
    "build:linker": "cd packages/linker-plugins && npm run build",
    "demo:vite:rolldown": "cd demo-app && npm run vite:rolldown",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "cargo test -p angular-compiler -p angular-compiler-cli -p ts --lib",
    "test:workspace": "cargo test -p angular-compiler -p angular-compiler-cli -p ts --lib",
    "version": "napi version",
    "prepare": "husky",
    "format": "prettier --write \"demo-app/src/**/*.{js,ts,html,css,json}\" \"packages/binding/**/*.{js,ts,json}\" \"rust-builder/src/**/*.{js,ts,json}\" \"demo-app/out-tsc/**/*.{js,ts,json}\" \"demo-app/rust-output/**/*.{js,ts,json}\"",
    "format:check": "prettier --check \"demo-app/src/**/*.{js,ts,html,css,json}\" \"packages/binding/**/*.{js,ts,json}\" \"rust-builder/src/**/*.{js,ts,json}\" \"demo-app/out-tsc/**/*.{js,ts,json}\" \"demo-app/rust-output/**/*.{js,ts,json}\"",
    "format:rust": "cargo fmt --all",
    "format:rust:check": "cargo fmt --all -- --check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "prettier": "^3.7.4"
  },
  "engines": {
    "node": ">= 16"
  }
}
