{
  "name": "@angular/rust-compiler",
  "version": "0.1.0",
  "description": "High-performance Angular compiler written in Rust",
  "main": "index.js",
  "types": "index.d.ts",
  "napi": {
    "name": "angular-rust-compiler",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu",
        "aarch64-unknown-linux-musl",
        "aarch64-apple-darwin",
        "x86_64-apple-darwin"
      ]
    }
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "cargo test",
    "version": "napi version",
    "prepare": "husky",
    "format": "prettier --write \"demo-app/src/**/*.{js,ts,html,css,json}\" \"packages/binding/**/*.{js,ts,json}\" \"rust-builder/src/**/*.{js,ts,json}\"",
    "format:check": "prettier --check \"demo-app/src/**/*.{js,ts,html,css,json}\" \"packages/binding/**/*.{js,ts,json}\" \"rust-builder/src/**/*.{js,ts,json}\"",
    "format:rust": "cargo fmt --all",
    "format:rust:check": "cargo fmt --all -- --check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "prettier": "^3.7.4"
  },
  "engines": {
    "node": ">= 16"
  }
}
